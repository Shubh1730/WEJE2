package com.pro;

public class Alphabet_pattern {
	
	public static void main(String[] args) {
		char alpha= 'A';
		for (int i = 0; i < 3; i++) {
			for (int j = i; j < 3; j++) {
				System.out.print("* ");
			}
			for (int k = 1; k <=i; k++) {
				System.out.print(alpha +" ");
			}
			System.out.println();
		}
	}
}
