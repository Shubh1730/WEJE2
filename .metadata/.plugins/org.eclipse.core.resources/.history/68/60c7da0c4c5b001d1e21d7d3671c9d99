package com.pro;

public class Alphabet_pattern {
	
	public static void main(String[] args) {
		char alpha= 'A';
		for (int i = 0; i < 3; i++) {
			for (alpha = 'A'; alpha <=i; alpha++) {
				System.out.print(alpha);
			}
//			for (int j = i; j < 3; j++) {
//				System.out.print("* ");
//			}
//			for (int k = 0; k <=i+1; k++) {
//				System.out.print(alpha +" ");
//				alpha++;
//			}
			System.out.println();
		}
	}
}
