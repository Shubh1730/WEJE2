			}
//			for (int j = i; j < 3; j++) {
//				System.out.print("* ");
//			}
//			for (int k = 0; k <=i+1; k++) {
//				System.out.print(alpha +" ");
//				alpha++;
//			}
			System.out.println();
		}
	}
}
